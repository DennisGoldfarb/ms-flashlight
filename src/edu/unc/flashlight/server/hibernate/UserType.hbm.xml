<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="edu.unc.flashlight.shared.model.UserType" table="user_types">
        <id name="id">
            <column name="user_type_id" />
            <generator class="identity" />
        </id>
        <property name="name"/>

    </class>
    
<query name="UserType.all">
	from UserType u
</query> 

<query name="UserType.byId">
	from UserType u where id = :id
</query>

<query name="UserType.byName">
	from UserType u where name = :name
</query>

</hibernate-mapping>
